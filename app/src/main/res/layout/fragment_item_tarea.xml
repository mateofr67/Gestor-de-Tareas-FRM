<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    android:layout_marginBottom="15dp"
    style="?attr/materialCardViewFilledStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tareaId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            tools:text="1" />

        <TextView
            android:id="@+id/tareaDescripcion"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:text="Lavar los platos" />

        <TextView
            android:id="@+id/tareaFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="29/11/2001 20:15" />

        <TextView
            android:id="@+id/tareaPrioridad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="Alta" />

        <ImageView
            android:id="@+id/tareaCompletada"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/unchecked"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:contentDescription="@string/icono_de_completado" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
